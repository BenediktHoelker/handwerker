{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "rootDirs": ["./srv", "./app"],
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@sapui5/ts-types-esm"
    ],
    "paths": {
      "handwerker/*": ["./app/*"]
    }
  },
  "include": ["./srv/**/*", "./app/**/*"]
}
