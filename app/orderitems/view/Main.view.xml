<mvc:View controllerName="hw.orderitems.controller.Main" displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<SplitApp id="splitApp" initialDetail="detail" initialMaster="master">
		<masterPages>
			<Page id="masterPage" title="{i18n>masterPageTitle}">
				<List id="masterList" mode="SingleSelectMaster" items="{path: '/OrderItems', parameters:{expand : 'order/client,equipment'}}">
					<StandardListItem title="{equipment/name}" description="{order/client/name}"/>
				</List>
			</Page>
		</masterPages>
		<detailPages>
			<Page id="detailPage" backgroundDesign= "Solid" title="Detail Page 1">
			</Page>
		</detailPages>

	</SplitApp>
</mvc:View>